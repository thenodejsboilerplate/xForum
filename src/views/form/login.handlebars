{{#extend "css"}}
  <style>
    .secondHeader{
      display: none;
    }
    .formHeader{
        font-size: 2rem; 
        margin-bottom:4rem;
        text-align:center;
    }
    .signup{
      padding:1rem 1rem;
    }

    .moreOptions{
      width:100%;
      text-align:center;
    }
    .moreOptions a{
        color: white;
    }


  </style>
{{/extend}}
{{> general/header}}

<div class="contentBlock">

    <div class="ui column grid" style="margin-top: 0.5rem;">
            <div class="eleven wide computer sixteen wide mobile column stackable leftBlock"> 
                    {{> general/message}}
                    <div class="signup">
                        <div class="ui basic">
                            
                            <h2 class="formHeader">Log In (登陆)</h2>
                            <form class="ui form" method="POST" action="/user/postLogin">
                                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                <div class="field">
                                    <label>Email（邮箱）</label>
                                    <input type="email" name="email">
                                </div>
                                <div class="field">
                                    <label>Password （密码）</label>
                                    <input type="text" name="password">
                                </div>
                                <input class="ui button" type="submit" value="提交">
                            </form>
                            <br>                           
                            <div class="ui bottom attached warning message">
                            <i class="icon help"></i>
                            还未注册? <a href="/user/signup">注册</a>.
                            </div>
                            {{!-- <div class="ui horizontal divider">
                                Or
                            </div>
