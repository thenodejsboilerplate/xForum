  </div>


  <div class="field">
    {{!-- <label class="label">Subject</label> --}}
    <div class="control">
      <div class="select">
        <select  class="select" name="category">
            <option value="" selected>Category</option>
            {{#if categories}}
                {{#each categories}}
                    <option value="{{this.key}}">{{this.value}}</option>
                {{/each}}
            {{/if}}
          </select>
      </div>
    </div> 
  </div>


