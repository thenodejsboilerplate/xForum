                        {{else project.isWarning}}
                          Status:    Warning
                        {{/if}}

                    </span>
                </div>


             <p>Message:   {{project.detail}}</p> 
             
                {{#if like}}
                <a href="#" class="messageA"><span class="like">已关注 {{project.likeProject}}</span></a>       
                {{else}}
                <a href="/dir/like?id={{project._id}}" class="messageA"><span class="like">+ 关注 {{project.likeProject}}</span></a>
                {{/if}}

                <a href="{{project.url}}" class="messageA">View</a>
