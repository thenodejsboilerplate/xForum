                    <span class="icon has-text-{{project.scamLevel}}">
                        {{#if project.isPrimary}}
                                <i class="fas fa-check-square" ></i>
                            {{else project.isDanger}}
                                <i class="fas fa-ban" ></i>
                            {{else project.isWarning}}
