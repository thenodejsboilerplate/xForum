{{#extend "css"}}
<style>
    .searchContainer{
        margin-top: 6rem!important;
    }
    .searchContainer h1{
        font-size: 2rem;
        text-align: center;
        margin-bottom: 2rem;
    }
    .field.has-addons{

    }
    p.control.inputP{
        width: 38%!important;
    }
