{{> general/header}}



<div class="searchContainer">
    <h1>Check Your Smart Contract/Token Address</h1>
    <section class="search">
       <form action="/scam/searchPost" method="post" >
            <div class="field has-addons has-addons-centered">
            <p class="control">
                <span class="select">
                <select name="chain">
                    <option value="eth">Ethereum</option>
                    <option value="bnb">Binance</option>
                    <option value="matic">Polygon</option>
                </select>
                </span>
            </p>
            <p class="control inputP">
                <input class="input" name="address" type="text" placeholder="Smart Contract Address">
            </p>
            <p class="control">
                <input type="submit" class="button is-primary" placeholder="CHECK">
                {{!-- <a class="button is-primary">
                Check
                </a> --}}
            </p>
            </div>
       </form>

    </section>

</div>


